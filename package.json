{
  "name": "ricardo-jeremias-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env TAILWIND_MODE=watch vite",
    "build": "cross-env-shell TAILWIND_MODE=build BASE_URL=https://painatalman.github.io/jeremy-site/ vite build --base=https://painatalman.github.io/jeremy-site/",
    "preview": "vite preview",
    "commit-with-cz": "cz",
    "prepare": "husky",
    "release-first": "npx commit-and-tag-version --first-release",
    "release-patch": "npx commit-and-tag-version",
    "release-minor": "npx commit-and-tag-version --release-as minor",
    "release-major": "npx commit-and-tag-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^8.47.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^9.1.6",
    "postcss": "^8.4.27",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "@barba/core": "^2.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
